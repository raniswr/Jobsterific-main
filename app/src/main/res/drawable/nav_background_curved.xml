<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>

            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="3dp" />
            <solid android:color="#00dff2e4" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="3dp" />

            <solid android:color="#10dff2e4" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="3dp" />

            <solid android:color="#20dff2e4" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />

            <solid android:color="#50C0C0C0" />

            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:topRightRadius="20dp" android:topLeftRadius="20dp" />
        </shape>
    </item>

</layer-list>


