<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBatch"
                android:text="Name Batch"
                android:textColor="@color/black"
                android:fontFamily="@font/abezee_regular"
                android:ellipsize="end"

                android:layout_marginStart="5dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                tools:ignore="MissingConstraints">

                <!-- ImageView untuk icon -->


                <!-- TextView untuk nameBatch -->
                <TextView
                    android:id="@+id/nameBatch"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Batch"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abezee_regular"
                    android:ellipsize="end"
                    android:textSize="25sp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    tools:ignore="MissingConstraints" />
                <ImageView
                    android:id="@+id/iconImageViewNameBatch"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_active"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/nameBatch"
                    android:contentDescription="Icon"
                    />

            </RelativeLayout>



            <TextView
                android:id="@+id/description"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/abezee_regular"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="We are looking for talented and motivated individuals who have the skills and experience in cloud computing and artificial intelligence to join our company. You will work on exciting projects that leverage Google Cloud, IBM AI, and other modern tools and frameworks to solve real-world problems and create value for our customers. You will also have the opportunity to learn from industry experts, collaborate with peers, and advance your career in the fast-growing field of cloud and AI. A.K.A Excerpt"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutBatch"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/layoutTime"
                app:layout_constraintTop_toBottomOf="@id/description">

                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_time"
                    android:layout_centerVertical="true"
                    android:contentDescription="Icon"
                    app:tint="@color/black" />


                <TextView
                    android:id="@+id/period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconImageView"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abezee_regular"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:text="15 Oct 23 - 31 Oct 23"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"

                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/layoutTime">
                <ImageView
                    android:id="@+id/iconImageView2"
                    android:layout_width="15dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_education"
                    android:layout_centerVertical="true"
                    app:tint="@color/black"
                    android:contentDescription="Icon"/>
                <TextView
                    android:id="@+id/job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconImageView2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abezee_regular"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:text="Profesional UI/UX"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"

                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
